{{> navbar user=username}}
<div class="container">
    <div class="box-big">
        <form id="contact_form" class="form-horizontal" action="/user/add_contact" method="POST" enctype="multipart/form-data">
            <div class="form-group row">
                <div class="col-lg-12 profile-header-container">
                    <div class="profile-header-img">
                        <img class="img-circle c-profile-pic-img" id="ac_profile_pic_img" src="https://www.qualiscare.com/wp-content/uploads/2017/08/default-user.png"
                        />
                        <div class="change-label-container">
                            <input type="file" id="ac_profile_pic" class="img-upload" name="file" accept=".png, .jpg, .jpeg" />
                            <span class="label label-default profile-pic-action" onclick="ac_profile_pic.click()">Change</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group form-inline row">
                <div class="col-lg-2 col-md-2 col-sm-2">
                    <label for="c_firstname">First Name</label>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <input type="text" name="c_firstname" class="form-control" autocomplete="off" pattern="[A-Za-z]{2,}" required>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2">
                    <label for="c_lastname">Last Name</label>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <input type="text" name="c_lastname" class="form-control" autocomplete="off" pattern="[A-Za-z]+">
                </div>
            </div>
            <div class="form-group form-inline row">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <label for="c_address">Address</label>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <textarea class="form-control" name="c_address" rows="3" pattern=".{2,100}" autocomplete="off"></textarea>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <label for="c_birth">Date of Birth</label>
                        </div>
                        <div class="col-lg-5 col-md-5 col-sm-5">
                            <input type="text" id="c_dob" name="c_dob" class="form-control datepicker" autocomplete="off">
                        </div>
                    </div>
                    <div class="row row-nest">
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <label for="c_address">Group</label>
                        </div>
                        <div class="col-lg-5 col-md-5 col-sm-5">
                            <select id="c_group" name="c_group" form="contact_form" class="form-control">
                                <option value='o'>Others</option>
                                <option value='b'>Friends</option>
                                <option value='f'>Family</option>
                                <option value='w'>Work</option>
                                <option value='p'>Places</option>
                                <option value='n'>Neighbours</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group form-inline row">
                <div class="col-lg-2 col-md-2 col-sm-2">
                    <label for="c_phone_no">Phone</label>
                </div>
                <div id="c_phone_input" class="col-lg-4 col-md-5 col-sm-5 col-xs-10">
                    <table class="phone-list">
                        <tr>
                            <td>
                                <input type="tel" class="form-control" pattern="[0-9]{1,15}" id="c_phone_no0" name="c_phone_no" autocomplete="off" required>
                            </td>
                            <td>
                                <select id="c_phone_type" name="c_phone_type" form="contact_form" class="form-control">
                                    <option id='ph0' value='h'>Home</option>
                                    <option id='pw0' value='w'>Work</option>
                                    <option id='po0' value='o'>Other</option>
                                </select>
                            </td>
                            <td>
                                <span class="glyphicon glyphicon-plus action-item add_phone"></span>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="form-group form-inline row">
                <div class="col-lg-2 col-md-2 col-sm-2">
                    <label for="c_email">Email</label>
                </div>
                <div id="c_email_input" class="col-lg-4 col-md-5 col-sm-5 col-xs-10">
                    <table class="email-list">
                        <tr>
                            <td>
                                <input type="text" class="form-control" pattern=".*@.*\..{1,4}" id="c_email0" name="c_email" autocomplete="off">
                            </td>
                            <td>
                                <select id="c_email_type" name="c_email_type" form="contact_form" class="form-control">
                                    <option id='eh0' value='h'>Home</option>
                                    <option id='ew0' value='w'>Work</option>
                                    <option id='eo0' value='o'>Other</option>
                                </select>
                            </td>
                            <td>
                                <span class="glyphicon glyphicon-plus action-item add_email"></span>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="form-group form-inline row">
                <div class="col-lg-2 col-md-2 col-sm-2"></div>
                <div class="col-lg-3 col-md-3 col-sm-4  col-xs-12">
                    <input type="submit" class="btn btn-primary" value="Save">
                    <input type="button" class="btn" id="ac_cancel" onclick="window.history.back();" value="Cancel">
                    
                </div>
            </div>
    </div>
    </form>
</div>
{{> dialog delete=true}}
{{> dialog info=true}}
</div>
<script src="/javascripts/contact.js"></script>