{{> navbar user=username}}

<div class="container">
    <div class="box-big">
        <form action="/user/profile" method="POST">
            <h3 class="text-left">Edit profile</h3>
            <hr>
 
            <div class="form-group form-inline row">
                <div class="col-lg-2  col-sm-2">
                    <label for="ep_firstname">First Name</label>
                </div>
                <div class="col-lg-4 col-sm-4">
                    <input type="text" class="form-control" id="ep_firstname" name="ep_firstname" pattern="[A-Za-z]+" autocomplete="off" required>
                </div>
                <div class="col-lg-2  col-sm-2">
                    <label for="ep_lastname">Last Name</label>
                </div>
                <div class="col-lg-4  col-sm-4">
                    <input type="text" class="form-control" id="ep_lastname" name="ep_lastname" pattern="[A-Za-z]+" autocomplete="off" required>
                </div>
            </div>
            <div class="form-group form-inline row">
                <div class="col-lg-2  col-sm-2">
                    <label for="ep_email">Email</label>
                </div>
                <div class="col-lg-4  col-sm-4">
                    <input type="text" disabled class="form-control" id="ep_username"  name="ep_username" pattern="(.*@.*\..{2,4})" autocomplete="off" required>
                </div>
                <div class="col-lg-2  col-sm-2">
                    <label for="ep_genders">Gender</label>
                </div>
                <div class="col-lg-4  col-sm-4">
                    <div name="ep_genders" class="radio">
                        <label class="radio-inline">
                            <input type="radio" id="ep_gender_m" name="ep_gender" value="m">Male</label>
                        <label class="radio-inline">
                            <input type="radio" id="ep_gender_f" name="ep_gender" value="f">Female</label>
                        <label class="radio-inline">
                            <input type="radio" id="ep_gender_o" name="ep_gender" value="o" selected>Others</label>
                    </div>
                </div>
            </div>
            <div class="form-group form-inline row">
                <div class="col-lg-2  col-sm-2">
                    <label for="ep_dob">Date of Birth</label>
                </div>
                <div class="col-lg-3  col-sm-3">
                    <input type="text" id="ep_dob" name="ep_dob" class="form-control datepicker" autocomplete="off" >
                </div>
                <div class="col-lg-1  col-sm-1"></div>
                <div class="col-lg-2  col-sm-2">
                    <label for="su_password">Password</label>
                </div>
                <div class="form-group col-lg-4  col-sm-4">
                    <div class="flexContainer">
                        <input type="password" class="form-control" id="ep_password" name="ep_password" placeholder="New Password" autocomplete="off">
                        <span class="glyphicon glyphicon-eye-open inputIcon" id="ep_passIcon" onclick="togglePassword('ep_password','ep_passIcon');"></span>
                    </div>
                </div>
            </div>
            <div class="form-group form-inline row">
                <div class="col-lg-2  col-sm-2"></div>
                <div class="col-lg-4 col-md-4 col-sm-5 col-xs-6">
                    <input type="submit" class="btn btn-primary" value="Save">
                    <input type="button" class="btn" id="ep_cancel" onclick="window.history.back();" value="Cancel">
                </div>
            </div>
        </form>
    </div>
</div>
<script src="/javascripts/profile.js"></script>