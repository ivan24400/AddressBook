{{> navbar}}

<div class="box">
    <form action="/" method="POST">
        <h3 class="text-center">Login</h3>
        <br> {{#if error}}
        <h6 style="color:red;">Incorrect username or password</h6>
        {{/if}}
        <div class="form-group inner-addon left-addon">
            <i class="glyphicon glyphicon-user"></i>
            {{#if error }}
            <input type="text" style="border-color:red" autocomplete="off" id="username" name="username" class="form-control" placeholder="Email"
                required> {{else}}
            <input type="text" autocomplete="off" id="username" name="username" class="form-control" oncopy="return false" onpaste="return false" placeholder="Email" required> {{/if}}
        </div>
        <div class="form-group inner-addon left-addon">
            <i class="glyphicon glyphicon-lock"></i>
            {{#if error }}
            <input type="password" style="border-color:red" autocomplete="off" id="password" name="password" class="form-control" placeholder="Password"
                required> {{else}}
            <input type="password" autocomplete="off" id="password" name="password" class="form-control" oncopy="return false" onpaste="return false" placeholder="Password" required> {{/if}}
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success btn-block">Log in</button>
        </div>
        <hr>
        <p>Not a user? Register
            <a href="signup" class="hyperlink">
                <font color="#00acc1">here</font>
            </a>
        </p>
    </form>
</div>
</div>